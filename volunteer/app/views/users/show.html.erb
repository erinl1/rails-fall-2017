<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css"
  href="https://fonts.googleapis.com/css?family=Lobster">
  <link rel="stylesheet" type="text/css"
  href="https://fonts.googleapis.com/css?family=Muli">
  <style>

  body {
    font-family: 'Muli';
  }

  .form-group {
    width: 350px;
    height: 90px;
    margin-left: 33%;
  }
  .header {
    width: 95%;
    height:800px;
    align-items: center;
    border-radius: 25px;
    border-width: thin;
    border-color: black;


  }
  h3 {
    text-align: center;
  }
  h1 {
    text-align: center;
    font-size: 60px;
  }
  h2
  {
    text-align: center;
  }
  h4 {
    font-size: 25px;
  }

  .img {
    border-radius: 25px;
    height: auto;
    width: 360px;
    float: left;

    margin-left: 20px;
  }
  </style>
</head>
<body>
<div class = "container"><br>
  <div class = 'header border'><br>
    <div class = 'row'>
      <div class = 'col-md-5'>
        <div><h3>
          <%= @user.username %>
        </h3>
          </div><br>
          <img class = "img" src ='https://media-mmdb.nationalgeographic.com/static-media/images/css_images/nationalGeographic_default_avatar.jpg'>
          <center><br><br>
          <h4> <%= link_to 'edit', edit_user_path(@user), class: 'link' %> </h4>
          <h4> <%= link_to 'home', root_path, class: 'link' %> </h4>
          <h4> <%= link_to 'create event', new_user_event_path(@user), class: 'link' %> </h4>
          <h4> <%= link_to 'delete user', @user, method: :delete, data: {confirm: 'are you sure you want to delete this?'}, class: 'link' %> </h4>
          </center>
        </div>
        <div class = 'col-md-7'>
          <h1> <%= @user.name %> </h1>
          <% for event in @user.events %>
          <h4><li><%= event.name %></li></h4>
          <h4><%= event.date %><h4>
          <h4><%= event.description %><h4>
            <h4 class ='link' style = 'font-size: 24px'><%= link_to 'event info', user_event_path(@user)%><h4>
          <% end %>
        </h1>
      </div>
    </div>
  </div>
</div>
</nav>
</div>
</body>
